time:
  - platform: sntp
    id: sntp_time
    on_time:
      # flash the LED every hour
      - seconds: 0
        minutes: 0
        hours: /1
        then:
          - light.turn_on:
              id: led
              effect: "Fast Pulse"
          - delay: 5000ms
          - light.turn_off:
              id: led 
  - platform: homeassistant
    id: homeassistant_time
    on_time_sync:
      - script.execute: time_update
      - script.execute: time_minute_update
    on_time:
      - minutes: '*'
        seconds: '*'
        then:
          - script.execute: time_update
  - platform: homeassistant
    id: time_minute
    on_time_sync:
      - script.execute: time_minute_update
      - lvgl.page.show:
